.schemaviewer

	&-title
		text-align center

	&-source
		display block
		width 100%
		min-height 6em
		border-radius 3px
		padding $padding
		font-size 0.8em
		font-family $font-family-monospace

	&-output
		display block
		border 1px solid silver
		border-radius 3px
		padding $padding
		font-family $font-family-monospace

		i
			color gray
		b
			display inline-block
			width 1.5em
			border-left 1px dotted #eee
		strong
			// color black
